<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <View
        android:id="@+id/item_pointer_green"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="-1dp"
        android:paddingTop="100dp"
        android:layout_alignLeft="@id/item_layout"
        android:background="@drawable/pointer_green"/>
    <View
        android:id="@+id/item_pointer_red"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="-1dp"
        android:paddingTop="100dp"
        android:layout_alignLeft="@id/item_layout"
        android:background="@drawable/pointer_red"/>

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        android:paddingEnd="15dp"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_stock_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stock Name"
            android:fontFamily="@font/teko_regular"
            android:textSize="17sp"
            android:textColor="@android:color/white"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_stock_intraday_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Open"
            android:gravity="end"
            android:fontFamily="@font/teko_regular"
            android:textSize="17sp"
            android:textColor="@android:color/white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_stock_intraday_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Close"
            android:gravity="end"
            android:fontFamily="@font/teko_regular"
            android:textSize="17sp"
            android:textColor="@android:color/white" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_stock_intraday_change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Change"
            android:gravity="end"
            android:fontFamily="@font/teko_regular"
            android:textSize="17sp"
            android:textColor="@android:color/white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_stock_intraday_percent_change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Percent"
            android:gravity="end"
            android:fontFamily="@font/teko_regular"
            android:textSize="17sp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/white" />

        <View
            android:id="@+id/item_stock_intraday_percent_arrow_up"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-10.3dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/item_stock_intraday_percent_change"
            android:background="@drawable/arrow_up" />
        <View
            android:id="@+id/item_stock_intraday_percent_arrow_down"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="2dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/item_stock_intraday_percent_change"
            android:background="@drawable/arrow_down" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/item_stock_BTN_addFavorite"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/item_stock_intraday_percent_arrow_down"
            android:background="@drawable/add_favorite_btn" />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/item_stock_BTN_removeFavorite"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="-15dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/item_stock_intraday_percent_arrow_down"
            android:background="@drawable/remove_favorite_btn" />

    </LinearLayout>

</RelativeLayout>
