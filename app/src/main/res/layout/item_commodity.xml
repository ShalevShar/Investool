<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">

    <View
        android:id="@+id/item_commodity_pointer_green"
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_marginStart="-1dp"
        android:paddingTop="100dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/pointer_green"/>
    <View
        android:id="@+id/item_commodity_pointer_red"
        android:layout_width="10dp"
        android:layout_height="30dp"
        android:layout_marginStart="-1dp"
        android:paddingTop="50dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/pointer_red"/>

    <LinearLayout
        android:id="@+id/item_commodity_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:layout_alignParentTop="true"
        android:paddingTop="2dp"
        android:paddingEnd="15dp"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_commodity_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Commodity Name"
            android:fontFamily="@font/teko_regular"
            android:textSize="17sp"
            android:textColor="@android:color/white"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_commodity_intraday_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price"
            android:gravity="end"
            android:fontFamily="@font/teko_regular"
            android:textSize="17sp"
            android:textColor="@android:color/white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_commodity_intraday_change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Change"
            android:gravity="end"
            android:fontFamily="@font/teko_regular"
            android:textSize="17sp"
            android:textColor="@android:color/white" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_commodity_intraday_percent_change"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Percent"
            android:gravity="end"
            android:fontFamily="@font/teko_regular"
            android:textSize="17sp"
            android:paddingEnd="10dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_commodity_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight Unit"
        android:layout_toRightOf="@+id/item_commodity_pointer_green"
        android:layout_below="@id/item_commodity_layout"
        android:layout_marginTop="-6dp"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/teko_regular"
        android:textSize="10sp"
        android:textColor="@android:color/white"/>

    <View
        android:id="@+id/item_commodity_arrow_up"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/item_commodity_layout"
        android:background="@drawable/arrow_up" />
    <View
        android:id="@+id/item_commodity_arrow_down"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="2dp"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/item_commodity_layout"
        android:background="@drawable/arrow_down" />


</RelativeLayout>
