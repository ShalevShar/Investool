<HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <View
            android:id="@+id/item_crypto_pointer_green"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="-1dp"
            android:paddingTop="100dp"
            android:layout_alignLeft="@id/item_crypto_layout"
            android:background="@drawable/pointer_green"/>
        <View
            android:id="@+id/item_crypto_pointer_red"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="-1dp"
            android:paddingTop="100dp"
            android:layout_alignLeft="@id/item_crypto_layout"
            android:background="@drawable/pointer_red"/>

            <LinearLayout
                android:id="@+id/item_crypto_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:paddingEnd="15dp"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_crypto_name"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cryptocurrency Name"
                    android:fontFamily="@font/teko_regular"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_crypto_intraday_price"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price"
                    android:gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/teko_regular"
                    android:textSize="12sp"
                    android:textColor="@android:color/white" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_crypto_intraday"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Intraday"
                    android:gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/teko_regular"
                    android:textSize="12sp"
                    android:textColor="@android:color/white" />

                <View
                    android:id="@+id/item_crypto_day_arrow_up"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="-10.3dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@id/item_crypto_layout"
                    android:background="@drawable/arrow_up" />
                <View
                    android:id="@+id/item_crypto_day_arrow_down"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@id/item_crypto_layout"
                    android:background="@drawable/arrow_down" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_crypto_intrahour"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Intrahour"
                    android:gravity="end"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="3dp"
                    android:fontFamily="@font/teko_regular"
                    android:textSize="12sp"
                    android:textColor="@android:color/white" />

                <View
                    android:id="@+id/item_crypto_hour_arrow_up"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="-10.3dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@id/item_crypto_layout"
                    android:background="@drawable/arrow_up" />
                <View
                    android:id="@+id/item_crypto_hour_arrow_down"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignRight="@id/item_crypto_layout"
                    android:background="@drawable/arrow_down" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/item_crypto_intraweek"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Intraweek"
                    android:gravity="end"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/teko_regular"
                    android:textSize="12sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        <View
            android:id="@+id/item_crypto_week_arrow_up"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/item_crypto_layout"
            android:background="@drawable/arrow_up" />
        <View
            android:id="@+id/item_crypto_week_arrow_down"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="6dp"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/item_crypto_layout"
            android:background="@drawable/arrow_down" />

    </RelativeLayout>
</HorizontalScrollView>
